@model Fortificar.Models.Projeto

@{
    ViewData["Title"] = "Excluir projeto";
}

<h1>@ViewData["Title"]</h1>

<h3>Você tem certeza que deseja excluir o projeto?</h3>
<div>
    <h4>Projeto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ObjetivoGeral)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ObjetivoGeral)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ObjetivosEspecificos)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ObjetivosEspecificos)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PublicoBeneficiario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PublicoBeneficiario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Justificativa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Justificativa)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
