                <label asp-for="Projeto.ObjetivosEspecificos">Objetivos Específicos</label>
                <span asp-validation-for="Projeto.ObjetivosEspecificos" class="text-danger"></span>
            </div>

            <h6 class="font-weight-bold">10.4 Público Beneficiário do Projeto</h6>
            <div class="form-floating mb-3">
                <select asp-for="PublicoBeneficiario" class="form-control">
                    <option value="">Selecione o Público Beneficiário</option>
                    <option value="CRI">Criança</option>
                    <option value="ADO">Adolescente</option>
                    <option value="JOV">Jovens</option>
                    <option value="ADU">Adultos</option>
                    <option value="IDO">Idosos</option>
                    <option value="CAE">Criança e Adolescente</option>
                    <option value="CAJ">Criança, adolescentes, Jovens, adultos e idosos</option>
                    <option value="ADI">Adultos e Idosos</option>
                    <option value="MUL">Mulheres</option>
                    <option value="PCD">PCD</option>
